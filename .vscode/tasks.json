{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run: server",
            "type": "shell",
            "command": "py ./server/manage.py runserver",
            "group": "build"
        },
        {
            "label": "build: app",
            "type": "shell",
            "command": "py ./server/manage.py startapp ${input:param2}",
            "group": "build"
        },
        {
            "label": "build: django",
            "type": "shell",
            "command": "django-admin startproject ${input:param1}",
            "group": "build"
        }
    ],
    "inputs": [
        {
            "id": "param1",
            "description": "Param1:",
            "default": "src",
            "type": "promptString"
        },
        {
            "id": "param2",
            "description": "Param2:",
            "default": "app",
            "type": "promptString"
        }
    ]
}